apiVersion: tekton.dev/v1alpha1
kind: Pipeline
metadata:
  name: build-salesforce-ingestor
  labels:
    app: salesforce-webhook-ingestor
  namespace: '{{ cicd_project }}'
spec:
  params:
    - default: latest
      description: Image Tag Value
      name: IMAGE_TAG
      type: string
    - default: '{{ registry_url }}/salesforce-webhook-ingestor'
      name: IMAGE_REGISTRY
      type: string
    - default: main
      description: Select Branch
      name: BRANCH_NAME
  tasks:
    - name: fetch-repository
      params:
        - name: url
          value: '{{ ingestor_git }}'
        - name: subdirectory
          value: ''
        - name: deleteExisting
          value: 'true'
        - name: revision
          value: $(params.BRANCH_NAME)
      taskRef:
        kind: ClusterTask
        name: git-clone
      workspaces:
        - name: output
          workspace: shared-workspace

    - name: maven-build
      params:
        - name: CONTEXT_DIR
          value: .
        - name: GOALS
          value:
            - '-DskipTests'
            - -Dmaven.repo.local=$(workspaces.maven-settings.path)
            - clean
            - package
      runAfter:
        - fetch-repository
      taskRef:
        kind: ClusterTask
        name: maven
      workspaces:
        - name: maven-settings
          workspace: maven-settings
        - name: source
          workspace: shared-workspace

    - name: maven-version
      params:
        - name: CONTEXT_DIR
          value: .
      runAfter:
        - maven-build
      taskRef:
        kind: Task
        name: maven-version
      workspaces:
        - name: maven-settings
          workspace: maven-settings
        - name: source
          workspace: shared-workspace

    - name: build-push-image
      params:
        - name: CONTEXT
          value: .
        - name: DOCKERFILE
          value: src/main/docker/Dockerfile.jvm
        - name: IMAGE
          value: '$(params.IMAGE_REGISTRY):$(tasks.maven-version.results.version)'
        - name: TLSVERIFY
          value: 'true'
      runAfter:
        - maven-version
      taskRef:
        kind: Task
        name: buildah-build-push
      workspaces:
        - name: source
          workspace: shared-workspace

    # - name: promote-prod
    #   runAfter:
    #     - build-push-image
    #   taskRef:
    #     kind: ClusterTask
    #     name: openshift-client
    #   params:
    #     - name: SCRIPT
    #       value: oc import-image salesforce-webhook-ingestor:prod -n {{ demo_project }}  --from=$(params.IMAGE_REGISTRY):$(tasks.maven-version.results.version) --confirm
  workspaces:
    - name: shared-workspace
    - name: maven-settings
